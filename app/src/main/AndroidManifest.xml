<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.coronatracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login.ForgotPassword"
            android:theme="@style/ActionBarGone" />
        <activity
            android:name=".Common.SplashScreen"
            android:theme="@style/ActionBarGone">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About.Socials"
            android:theme="@style/ActionBarGone" />
        <activity
            android:name=".About.AppInfo"
            android:theme="@style/ActionBarGone" />
        <activity
            android:name=".Common.OnBoardingScreen"
            android:theme="@style/ActionBarGone" />
        <activity
            android:name=".Country.CovidCountryDetails"
            android:theme="@style/ActionBarGone" />
        <activity
            android:name=".Login.LoginActivity"
            android:theme="@style/ActionBarGone" />
        <activity
            android:name=".Login.RegisterActivity"
            android:theme="@style/ActionBarGone" />
        <activity
            android:name=".About.AboutActivity"
            android:theme="@style/ActionBarGone" />
        <activity
            android:name=".Help.HelpActivity"
            android:theme="@style/ActionBarGone" />
        <activity
            android:name=".Home.HomeActivity"
            android:theme="@style/WhiteBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>