<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundss"
    tools:context=".About.Socials">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#EEF4F4F4"
            android:layout_gravity="center"
            android:padding="10dp">

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:text="@string/useful_links"
                    android:textAllCaps="true"
                    android:textSize="23sp"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/light_black"/>
                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey"
                    android:layout_margin="10dp"
                    android:orientation="horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:onClick="clickTwitter"
                        android:id="@+id/icon_holder"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_twitter_circled"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:onClick="clickTwitter"
                        android:id="@+id/tTwitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:fontFamily="@font/quicksand"
                        android:text="@string/coronastats_on_twitter"
                        android:layout_centerInParent="true"
                        android:textColor="@color/twitter_color"
                        android:layout_toEndOf="@+id/icon_holder"
                        android:layout_marginStart="20dp"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:onClick="clickFaceBook"
                        android:id="@+id/icon_holder1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_facebook_circled"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:onClick="clickFaceBook"
                        android:id="@+id/tFacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:fontFamily="@font/quicksand"
                        android:text="@string/coronastats_on_facebook"
                        android:textColor="@color/twitter_color"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/icon_holder1"
                        android:layout_marginStart="20dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:onClick="clickWorldHealthOrg"
                        android:id="@+id/icon_holder2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_world_health_organization"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:onClick="clickWorldHealthOrg"
                        android:id="@+id/tWorldHealth"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:text="@string/world_health_organisation"
                        android:textColor="@color/twitter_color"
                        android:layout_toEndOf="@+id/icon_holder2"
                        android:layout_marginStart="20dp"/>

                </RelativeLayout>

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:onClick="clickWorldMeter"
                    android:id="@+id/icon_holder3"
                    android:padding="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/worldometers"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:onClick="clickWorldMeter"
                    android:id="@+id/tWorldMeter"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/quicksand"
                    android:text="@string/world_o_meters"
                    android:textColor="@color/twitter_color"
                    android:layout_toEndOf="@+id/icon_holder3"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:onClick="clickCDC"
                        android:id="@+id/icon_holder4"
                        android:padding="2dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/cdc"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:onClick="clickCDC"
                        android:id="@+id/tCDC"
                        android:textAlignment="textStart"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:text="@string/center_for_disease_ncontrol_and_prevention"
                        android:textColor="@color/twitter_color"
                        android:textAllCaps="true"
                        android:layout_toEndOf="@+id/icon_holder4"
                        android:layout_marginStart="20dp"/>

                </RelativeLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>